# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sisriapp
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/sisriapp_test

# Security
SECRET_KEY=your-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys
WEATHER_API_KEY=your-weather-api-key
SATELLITE_API_KEY=your-satellite-api-key

# Arduino Configuration
ARDUINO_PORT=COM3
ARDUINO_BAUD_RATE=9600

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
ENVIRONMENT=development

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WEBSOCKET_URL=ws://localhost:8000/ws

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379/0

# Google Earth Engine (Optional)
GEE_SERVICE_ACCOUNT=your-service-account@project.iam.gserviceaccount.com
GEE_PRIVATE_KEY_PATH=path/to/private-key.json
